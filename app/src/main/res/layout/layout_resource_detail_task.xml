<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:paddingStart="5dp"
    android:paddingEnd="5dp"
    android:id="@+id/lnDetailInfo"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:background="@drawable/bg_corner_resource_detail_task_time"
        android:drawablePadding="10dp"
        android:elevation="2dp"
        android:gravity="center"
        android:paddingStart="5dp"
        android:paddingTop="2dp"
        android:paddingEnd="5dp"
        android:paddingBottom="2dp"
        android:text="29 th 12, 2020"
        android:textColor="@color/mdtp_white"
        android:textSize="16dp"
        app:drawableStartCompat="@drawable/ic_clock" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/tvActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="2"
            android:textSize="16dp"
            app:drawableStartCompat="@drawable/ic_chat" />

        <TextView
            android:id="@+id/tvAttachment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:drawablePadding="10dp"
            android:drawableTint="#FF000000"
            android:gravity="center"
            android:text="8"
            android:textSize="16dp"
            app:drawableStartCompat="@drawable/ic_attachment" />

        <TextView
            android:id="@+id/tvCompletedSubTask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="10dp"
            android:drawableTint="#FF000000"
            android:gravity="center"
            android:text="1/3"
            android:textSize="16dp"
            app:drawableStartCompat="@drawable/ic_checklist" />
    </LinearLayout>

</LinearLayout>
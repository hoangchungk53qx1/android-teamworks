<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imgAttachment"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="5dp"
        android:scaleType="centerInside"
        android:src="@drawable/bg_demo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#26000000"
        app:layout_constraintBottom_toBottomOf="@id/imgAttachment"
        app:layout_constraintEnd_toEndOf="@id/imgAttachment"
        app:layout_constraintStart_toStartOf="@id/imgAttachment"
        app:layout_constraintTop_toTopOf="@id/imgAttachment" />

    <ImageButton
        android:id="@+id/btnMore"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:background="@null"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_more_ver"
        app:layout_constraintBottom_toBottomOf="@id/imgAttachment"
        app:layout_constraintEnd_toEndOf="@id/imgAttachment" />

</androidx.constraintlayout.widget.ConstraintLayout>